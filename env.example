# Variables de entorno para producción
# Copiar este archivo como .env en el servidor

# Base de datos PostgreSQL
DATABASE_URL="postgresql://controldeacceso:tu_password_seguro@localhost:5432/controldeacceso"

# JWT Secret para autenticación (cambiar por uno seguro)
NEXTAUTH_SECRET="tu-jwt-secret-super-seguro-cambiar-en-produccion"

# URL del sitio en producción
NEXT_PUBLIC_SITE_URL="https://tu-dominio.com"

# Puerto de la aplicación (por defecto 3000)
PORT=3000

# Entorno
NODE_ENV=production

# Configuración VPN
# Rango de IPs de la VPN (por defecto 10.8.0.0/24)
VPN_RANGE=10.8.0.0/24

# Habilitar verificación VPN (true para requerir VPN, false para permitir acceso sin VPN)
VPN_REQUIRED=false

# Token para la API de conexiones VPN (generar con: openssl rand -base64 32)
VPN_API_TOKEN=

# URL de la API para scripts de VPN (usualmente http://localhost:3000)
VPN_API_URL=http://localhost:3000
